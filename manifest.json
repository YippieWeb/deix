{
    "manifest_version": 3,
    "name": "Netflix DEI Index",
    "version": "1.0",
    "description": "Shows DEI index for Netflix shows and movies.",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": ["activeTab", "tabs", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.netflix.com/*"],
        "js": ["content.js"]
      }
    ]
  }  